---
title: Teams Standings
layout: base
pagination:
    data: teams.data
    size: 1
    alias: tms
---
<div class="container text-center">
  <div class="row">
    <div class="col"></div>
    <div class="col"></div>
  </div>
  <div class="row">
    <div class="col-md-auto ">
      <table class="table table-hover table-striped">
        <tr class="text-white">
          <th class="text-white">Position</th>
          <th class="text-white" width="10%">Team</th>
          <th class="text-white">Logo</th>
          <th class="text-white">Points</th>
        </tr>
        {% for team in teams.data %}
          <tr>
            <td class="text-white">{{ team.position }}</td>
            <td class="text-white">{{ team.team.name }}</td>
            <td class="text-white"><img src={{ team.team.logo }} width="20%" /></td>
            <td class="text-white">{{ team.points }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </div>
</div>