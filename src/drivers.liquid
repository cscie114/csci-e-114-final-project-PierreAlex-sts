---
title: Drivers Standing
layout: base
pagination:
    data: drivers.data
    size: 1
    alias: dvs
---
<div class="container text-center">
  <div class="row">
    <div class="col"></div>
    <div class="col"></div>
  </div>
  <div class="row">
    <div class="col-md-auto ">
      <table class="table table-hover table-striped">
        <tr class="text-white">
          <th class="text-white">Position</th>
          <th class="text-white">Driver name</th>
          <th class="text-white">Number</th>
          <th class="text-white">Photo</th>
          <th class="text-white" width="10%">Team</th>
          <th class="text-white">Logo</th>
          <th class="text-white">Points</th>
        </tr>
        {% for driver in drivers.data %}
          <tr>
            <td class="text-white">{{ driver.position }}</td>
            <td class="text-white">{{ driver.driver.name }}</td>
            <td class="text-white">{{ driver.driver.number }}</td>
            <td class="text-white"><img src={{ driver.driver.image }} width="50%" /></td>
            <td class="text-white">{{ driver.team.name }}</td>
            <td class="text-white"><img src={{ driver.team.logo }} width="20%" /></td>
            <td class="text-white">{{ driver.points }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </div>
</div>